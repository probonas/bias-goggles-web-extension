{
	"manifest_version": 2,
	"name": "bias-goggles",
	"description": "Firefox webextension for bias-goggles",
	"version": "0.0.1",
	"icons": {
		"16": "icons/icon-16.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"options_ui": {
		"page": "options.html"
	},
	"browser_action": {
		"default_icon": {
			"16": "icons/icon-16.png",
			"24": "icons/icon-24.png",
			"32": "icons/icon-32.png"
		},
		"default_title": "bias goggles",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"popover.js"
			],
			"css": [
				"popover.css"
			]
		}
	],
	"permissions": [
		"<all_urls>",
		"webRequest",
		"storage",
		"tabs",
		"alarms"
	],
	"web_accessible_resources": [
		"fonts/FiraSans-Regular.ttf"
	],
	"sidebar_action": {
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png"
		},
		"default_title": "Bias Goggles",
		"default_panel": "popup.html"
	}
}
{
	"manifest_version": 2,
	"name": "bias-goggles",
	"description": "Firefox webextension for bias-goggles",
	"version": "0.0.1",
	"icons": {
		"64": "icons/toolbar-icon.png"
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"options_page": "options.html",
	"browser_action": {
		"default_icon": {
			"19": "icons/toolbar-icon.png",
			"38": "icons/toolbar-icon.png"
		},
		"default_title": "bias goggles",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"popover.js"
			],
			"css": [
				"popover.css"
			]
		}
	],
	"permissions": [
		"<all_urls>",
		"webRequest",
		"storage",
		"tabs"
	],
	"web_accessible_resources": [
		"fonts/FiraSans-Regular.ttf"
	]
}